# ============================================
# FRAUD DETECTION SERVICE - ENVIRONMENT VARIABLES
# ============================================

# Application
ENVIRONMENT=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/fraud_engine
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=fraud_engine

# Cache (Redis)
REDIS_URL=redis://redis:6379/0

# Message Queue (Kafka)
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_CONSUMER_GROUP=fraud-engine-consumer

# Async Tasks (Celery + RabbitMQ broker)
CELERY_BROKER_URL=amqp://guest:guest@rabbitmq:5672//
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Notifications
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
NOTIFICATION_EMAIL_FROM=fraud-alerts@capitec.co.za
NOTIFICATION_EMAIL_TO=fraud-team@capitec.co.za

# Rules Engine
SCORING_STRATEGY=weighted
THRESHOLD_APPROVE=30
THRESHOLD_REVIEW=70
RULE_CACHE_TTL=300

# JWT / Auth (REQUIRED â€” no default; must be explicitly set)
JWT_SECRET_KEY=change-me-to-a-strong-random-secret-at-least-32-chars

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_SERVICE_NAME=core-fraud-detection-service
LOG_LEVEL=INFO

# Frontend
VITE_API_URL=http://localhost:8000
